{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "megaphone": {
      "root": "",
      "sourceRoot": "Angular/src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "deployUrl": "/home/",
            "outputPath": "public",
            "index": "Angular/src/index.html",
            "main": "Angular/src/main.ts",
            "polyfills": "Angular/src/polyfills.ts",
            "tsConfig": "Angular/src/tsconfig.app.json",
            "assets": ["Angular/src/favicon.ico", "Angular/src/assets"],
            "styles": [
              "./node_modules/bootstrap/dist/css/bootstrap.min.css",
              "Angular/src/styles.scss"
            ],
            "scripts": [
              "./node_modules/jquery/dist/jquery.min.js",
              "./node_modules/bootstrap/dist/js/bootstrap.min.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "Angular/src/environments/environment.ts",
                  "with": "Angular/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "megaphone:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "megaphone:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "megaphone:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "Angular/src/test.ts",
            "polyfills": "Angular/src/polyfills.ts",
            "tsConfig": "Angular/src/tsconfig.spec.json",
            "karmaConfig": "Angular/src/karma.conf.js",
            "styles": ["Angular/src/styles.scss"],
            "scripts": [],
            "assets": ["Angular/src/favicon.ico", "Angular/src/assets"]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "Angular/src/tsconfig.app.json",
              "Angular/src/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    },
    "megaphone-e2e": {
      "root": "Angular/e2e/",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "Angular/e2e/protractor.conf.js",
            "devServerTarget": "megaphone:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "megaphone:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "Angular/e2e/tsconfig.e2e.json",
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "defaultProject": "megaphone"
}
